<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="using:PhotoStudio.Desktop.Converters"
             x:Class="PhotoStudio.Desktop.App">
    
    <Application.Resources>
        <converters:StatusColorConverter x:Key="StatusColorConverter"/>
        
        <!-- Определение шрифтов из папки Fonts -->
        <FontFamily x:Key="InterRegular">avares://PhotoStudio.Desktop/Assets/Fonts/Inter_24pt-Regular.ttf#Inter</FontFamily>
        <FontFamily x:Key="InterBold">avares://PhotoStudio.Desktop/Assets/Fonts/Inter_24pt-Bold.ttf#Inter</FontFamily>
        <FontFamily x:Key="InterSemiBold">avares://PhotoStudio.Desktop/Assets/Fonts/Inter_24pt-SemiBold.ttf#Inter</FontFamily>
    </Application.Resources>
    
    <Application.Styles>
        <!-- Используем FluentTheme -->
        <FluentTheme />
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
        
        <!-- Глобальные стили для русских шрифтов -->
        <Style Selector="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource InterRegular}"/>
        </Style>
        
        <Style Selector="Button > TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource InterSemiBold}"/>
        </Style>
        
        <Style Selector="TextBox">
            <Setter Property="FontFamily" Value="{StaticResource InterRegular}"/>
        </Style>
        
        <Style Selector="ComboBox">
            <Setter Property="FontFamily" Value="{StaticResource InterRegular}"/>
        </Style>
        
        <Style Selector="TabItem">
            <Setter Property="FontFamily" Value="{StaticResource InterSemiBold}"/>
        </Style>
        
        <Style Selector="DataGrid">
            <Setter Property="FontFamily" Value="{StaticResource InterRegular}"/>
        </Style>
        
        <!-- Стили кнопок -->
        <Style Selector="Button">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        
        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#2980b9"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style Selector="Button:pressed">
            <Setter Property="Background" Value="#1f6da8"/>
        </Style>
        
        <!-- Стили TabControl -->
        <Style Selector="TabItem">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,2,0"/>
        </Style>
        
        <Style Selector="TabItem:pointerover">
            <Setter Property="Background" Value="#e3f2fd"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style Selector="TabItem:selected">
            <Setter Property="Foreground" Value="#3498db"/>
            <Setter Property="Background" Value="#e3f2fd"/>
            <Setter Property="BorderThickness" Value="0,0,0,3"/>
            <Setter Property="BorderBrush" Value="#3498db"/>
        </Style>
        
        <!-- Стили DataGrid -->
        <Style Selector="DataGrid">
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#EEE"/>
            <Setter Property="VerticalGridLinesBrush" Value="#EEE"/>
        </Style>
        
        <Style Selector="DataGridRow">
        </Style>
        
        <Style Selector="DataGridRow:pointerover">
            <Setter Property="Background" Value="#ebf5ff"/>
        </Style>
        
        <Style Selector="DataGridRow:selected">
            <Setter Property="Background" Value="#d4e6fd"/>
        </Style>
        
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        
        <!-- Стили для информационных карточек -->
        <Style Selector="Border.card">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#e9ecef"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BoxShadow" Value="0 2 10 0 #15000000"/>
        </Style>
        
        <Style Selector="Border.card:pointerover">
            <Setter Property="BoxShadow" Value="0 5 15 0 #25000000"/>
        </Style>
        
        <!-- Стили для информационных заголовков -->
        <Style Selector="TextBlock.heading">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style Selector="TextBlock.subheading">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Opacity" Value="0.7"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
    </Application.Styles>
</Application> 