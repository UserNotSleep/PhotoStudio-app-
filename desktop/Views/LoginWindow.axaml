<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="600"
        x:Class="PhotoStudio.Desktop.Views.LoginWindow"
        Title="Вход в PhotoSpace"
        SizeToContent="Height"
        Width="450"
        MinHeight="450"
        WindowStartupLocation="CenterScreen"
        Background="#F9F9F9"
        Icon="/Assets/avalonia-logo.ico">

    <Window.Styles>
        <!-- Стили для TextBox -->
        <Style Selector="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
        
        <Style Selector="TextBox:focus">
            <Setter Property="BorderBrush" Value="#3498db"/>
        </Style>
        
        <!-- Стили для Button -->
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="46"/>
        </Style>
        
        <Style Selector="Button.primary:pointerover">
            <Setter Property="Background" Value="#333333"/>
        </Style>
        
        <Style Selector="Button.tab">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style Selector="Button.tab:pointerover">
            <Setter Property="Background" Value="#F5F5F5"/>
        </Style>
        
        <Style Selector="Button.link">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style Selector="Button.link:pointerover TextBlock">
            <Setter Property="Foreground" Value="#3498db"/>
        </Style>
        
        <!-- Стили для выбора типа аккаунта -->
        <Style Selector="Border.account-type">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <Style Selector="Border.account-type:pointerover">
            <Setter Property="BorderBrush" Value="#3498db"/>
            <Setter Property="Background" Value="#F5F9FF"/>
        </Style>
        
        <Style Selector="Border.account-type.selected">
            <Setter Property="BorderBrush" Value="#3498db"/>
            <Setter Property="Background" Value="#EBF5FF"/>
        </Style>
        
        <!-- Стили для TextBlock в account-type -->
        <Style Selector="Border.account-type TextBlock">
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
        
        <!-- Стили для CheckBox -->
        <Style Selector="CheckBox">
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
        
        <!-- Стили для TextBlock -->
        <Style Selector="TextBlock.field-label">
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Styles>

    <Border Padding="20" Background="White" Margin="0" CornerRadius="0">
        <Grid RowDefinitions="Auto,Auto,*">
            <!-- Заголовок -->
            <StackPanel Grid.Row="0" Margin="0,20,0,30">
                <TextBlock Text="PhotoSpace" HorizontalAlignment="Center" 
                         FontSize="30" FontWeight="Bold" Foreground="#333333"/>
                <TextBlock Text="Система управления фотостудиями" HorizontalAlignment="Center" 
                         FontSize="16" Foreground="#777777" Margin="0,5,0,0"/>
            </StackPanel>
            
            <!-- Вкладки -->
            <Border Grid.Row="1" BorderBrush="#EEEEEE" BorderThickness="0,0,0,1">
                <Grid ColumnDefinitions="*,*">
                    <Button Grid.Column="0" Content="Вход" Classes="tab" Height="50" 
                            Name="LoginTab"
                            BorderThickness="0,0,0,2" BorderBrush="#333333"
                            Foreground="#333333" FontWeight="SemiBold"
                            Click="OnLoginTabClick"/>
                    <Button Grid.Column="1" Content="Регистрация" Classes="tab" Height="50"
                            Name="RegisterTab"
                            Foreground="#777777"
                            Click="OnRegisterTabClick"/>
                </Grid>
            </Border>
            
            <!-- Контейнер содержимого вкладок -->
            <ContentControl Grid.Row="2" Name="ContentContainer" Margin="0,20,0,0">
                <!-- Содержимое вкладок будет загружаться динамически -->
            </ContentControl>
        </Grid>
    </Border>
</Window> 