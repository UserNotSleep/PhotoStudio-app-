<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="450"
             x:Class="PhotoStudio.Desktop.Views.LoginContentView">
    
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,*">
        <!-- Email -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Email" Classes="field-label"/>
            <TextBox Watermark="example@mail.com"
                     Text="{Binding Email}"/>
        </StackPanel>
        
        <!-- Пароль -->
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" Margin="0,0,0,15">
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Пароль" Classes="field-label"/>
            <Button Grid.Row="0" Grid.Column="1" Classes="link">
                <TextBlock Text="Забыли пароль?" Foreground="#777777" FontSize="13"/>
            </Button>
            <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                     PasswordChar="•"
                     Text="{Binding Password}"/>
        </Grid>
        
        <!-- Запомнить меня -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,20" Spacing="8">
            <CheckBox IsChecked="{Binding RememberMe}"/>
            <TextBlock Text="Запомнить меня" VerticalAlignment="Center" Foreground="#333333"/>
        </StackPanel>
        
        <!-- Кнопка входа -->
        <Button Grid.Row="3" Content="Войти" Classes="primary"
                HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                Command="{Binding LoginCommand}"/>
        
        <!-- Разделитель -->
        <Grid Grid.Row="4" ColumnDefinitions="*,Auto,*" VerticalAlignment="Center" Margin="0,20">
            <Border Grid.Column="0" Height="1" Background="#EEEEEE" Margin="0,0,10,0"/>
            <TextBlock Grid.Column="1" Text="Или войти через" Foreground="#777777"/>
            <Border Grid.Column="2" Height="1" Background="#EEEEEE" Margin="10,0,0,0"/>
        </Grid>
        
        <!-- Социальные кнопки -->
        <Grid Grid.Row="5" ColumnDefinitions="*" RowDefinitions="Auto">
            <Border Grid.Column="0" BorderBrush="#DDDDDD" BorderThickness="1" 
                    CornerRadius="4" Height="50" Margin="0,5">
                <TextBlock Text="Другие способы входа в разработке..." 
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="#777777"/>
            </Border>
        </Grid>
    </Grid>
</UserControl> 